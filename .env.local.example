# ============================================
# UndangKita API - Development Environment
# ============================================
# Copy this file to .env and update the values

# Application Settings
NODE_ENV=development
PORT=8000
BASE_URL=http://localhost:8000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/semeru_db

# PostgreSQL credentials (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=semeru_db

# JWT Configuration
# Secret key for signing JWT tokens (use any random string for development)
JWT_SECRET=dev-secret-key-change-this-in-production
# Token expiration time
JWT_EXPIRES_IN=24h

# Logging Configuration
# Available levels: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=DEBUG
# Directory where log files will be stored
LOG_DIRECTORY=logs

# Supabase Configuration (optional for development, files will be stored locally)
# Uncomment and configure these for testing Supabase in development
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_BUCKET_NAME=undangan-photos

# Super Admin Seeder Password
SEEDER_PASSWORD=semeru12345